<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.confessions">

    <application
        android:allowBackup="true"
        android:icon="@drawable/finalicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BUConfessions">
        <activity android:name=".Splash" android:theme="@style/Theme.BUConfessions.noactionbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.AddNote"
            android:label="@string/title_activity_add_note"
            android:theme="@style/Theme.BUConfessions.NoActionBar" />
        <activity
            android:name=".main.NoteDetails"
            android:label="@string/title_activity_note_details"
            android:theme="@style/Theme.BUConfessions.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.BUConfessions.noactionbar">
        </activity>
    </application>

</manifest>